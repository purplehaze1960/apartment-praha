  <script>
    const translations = {
      en: {
        title: "Apartment Rentals",
        one: "1-room apartment — 15 000 CZK/month",
        two: "2-room apartment — 22 000 CZK/month",
        contact: "Contact: +420 123 456 789"
      },
      cz: {
        title: "Pronájem bytů",
        one: "1-pokojový byt — 15 000 Kč/měsíc",
        two: "2-pokojový byt — 22 000 Kč/měsíc",
        contact: "Kontakt: +420 123 456 789"
      },
      ru: {
        title: "Аренда квартир",
        one: "1-комнатная квартира — 15 000 CZK/месяц",
        two: "2-комнатная квартира — 22 000 CZK/месяц",
        contact: "Контакт: +420 123 456 789"
      }
    };

    function setLang(lang) {
      document.getElementById("title").innerText = translations[lang].title;
      document.getElementById("one-room").innerText = translations[lang].one;
      document.getElementById("two-room").innerText = translations[lang].two;
      document.getElementById("contact").innerText = translations[lang].contact;
    }
  </script>
